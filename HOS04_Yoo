# Function 1: Working with Lists
def list_operations():
    fruits = ["apple", "banana", "cherry"]
    print("Original list:", fruits)

    # Add a new fruit
    fruits.append("mango")
    print("After append:", fruits)

    # Insert a fruit at position 1
    fruits.insert(1, "orange")
    print("After insert:", fruits)

    # Remove a fruit
    fruits.remove("banana")
    print("After remove:", fruits)

    # Use a for loop to print all fruits
    print("All fruits in the list:")
    for fruit in fruits:
        print("-", fruit)

    # Return the list
    return fruits


# Function 2: Working with Tuples
def tuple_operations():
    # Tuple of favorite numbers
    numbers = (3, 7, 9, 12, 15)
    print("\nTuple of numbers:", numbers)

    # Accessing elements
    print("First number:", numbers[0])
    print("Last number:", numbers[-1])

    # Counting and indexing
    print("Count of 9:", numbers.count(9))
    print("Index of 12:", numbers.index(12))

    # Demonstrate immutability (tuples cannot be changed)
    try:
        numbers[1] = 99
    except TypeError:
        print("Error: Tuples are immutable, cannot modify values.")

    return numbers


# Function 3: Combine list & tuple data
def combine_data(list_data, tuple_data):
    combined = list_data + list(tuple_data)
    print("\nCombined data:", combined)
    print("Sorted combined data:", sorted(combined))
    return combined


# Main function to call all
def main():
    print("=== List and Tuple Operations ===")
    list_result = list_operations()
    tuple_result = tuple_operations()
    combine_data(list_result, tuple_result)


# Run the program
if __name__ == "__main__":
    main()
